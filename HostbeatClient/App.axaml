<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HostbeatClient.App"
             xmlns:local="using:HostbeatClient"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Theme/Theme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="Components/IncludeStyles.axaml" />
        <StyleInclude Source="Styles/TextBoxStyles.axaml" />
        <StyleInclude Source="Styles/TextBlockStyles.axaml" />
        <SimpleTheme />
    </Application.Styles>
</Application>